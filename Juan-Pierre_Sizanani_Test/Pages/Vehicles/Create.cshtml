@page
@model Juan_Pierre_Sizanani_Test.Pages.Vehicles.CreateModel
@{
}

<br>
<h2>New Vehicle</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="post">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Type</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="type" value="@Model.vehicle.type" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Registration Number</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="registration" value="@Model.vehicle.registration" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Model</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="model" value="@Model.vehicle.model" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Weight</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="weight" value="@Model.vehicle.weight" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Contractor ID</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="contractorID" value="@Model.vehicle.contractorID" />
        </div>
    </div>

    @if (Model.succsessMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.succsessMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/Vehicles/Vehicle" role="button">Cancel</a>
        </div>
    </div>
</form>